<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h2>Register a new app</h2>
      <p>Put in the name and url for your app and start tracking!</p>
      <%= form_for @new_app do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class:'form-control', placeholder: 'Name your app!' %>
      </div>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control', placeholder: 'Enter the url for your app.' %>
      </div>
      <%= f.submit "Submit", class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
