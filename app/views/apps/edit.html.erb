<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h2>Edit your app</h2>
      <p>Change the url for your app.</p>
      <%= form_for @app do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class:'form-control', placeholder: 'Enter a new name for your app.' %>
      </div>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control', placeholder: 'Enter a new url for your app.' %>
      </div>
      <%= f.submit "Update", class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
